---
---
[
  {% for post in site.posts %}
  {
    "id"         : "{{ post.id }}",
    "title"      : "{{ post.title | escape }}",
    "category"   : "{{ post.categories }}",
    "tags"       : "{{ post.tags | join: ', ' }}",
    "url"        : "{{ post.url }}",
    "path"       : "{{ post.path }}",
    "date"       : "{{ post.date }}",
    "shortdate"  : "{{ post.date | date : '%B %d, %Y' }}"
  }
  {% if forloop.last %}{% else %},{% endif %}
  {% endfor %}
]
