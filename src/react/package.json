{
  "name": "blog-react",
  "version": "0.0.1",
  "description": "React version of Linesh's blog.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --coverage --verbose"
  },
  "keywords": [
    "react",
    "blog"
  ],
  "author": "Linesh",
  "license": "MIT",
  "devDependencies": {
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/app/**/*.test.js"
    ],
    "verbose": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "<rootDir>/app/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "functions": 80,
        "branches": 80
      }
    },
    "coverageReporters": ["text"],
    "coverageDirectory": "<rootDir>/coverage"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./scripts/hooks/validate-commit-msg.sh ${HUSKY_GIT_PARAMS}"
    }
  }
}
