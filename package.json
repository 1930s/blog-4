{
  "name": "linesh-blog",
  "version": "0.0.1",
  "private": true,
  "description": "My blog implemented in different tech stacks.",
  "keywords": [
    "blog",
    "react"
  ],
  "author": "Linesh",
  "license": "MIT",
  "scripts": {
    "lint": "eslint index.js scripts src/react",
    "lint:watch": "esw index.js scripts src/react --watch",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --coverage --verbose",
    "sanity": "npm run lint && npm test",
    "generate-meta-data": "node ./scripts/generate-posts-metadata.js",
    "start": "APP_ROOT=src/react umi dev",
    "build": "APP_ROOT=src/react umi build"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.41",
    "@babel/preset-env": "^7.0.0-beta.41",
    "@babel/preset-react": "^7.0.0-beta.55",
    "babel-core": "^7.0.0-beta.41",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "eslint-watch": "^3.1.5",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "prop-types": "^15.6.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dva": "^2.3.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "redux-actions": "^2.4.0",
    "seamless-immutable": "^7.1.3",
    "umi": "^1.3.12",
    "umi-plugin-dva": "^0.9.1",
    "umi-plugin-routes": "^0.1.5"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/react/**/*.test.js"
    ],
    "verbose": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "<rootDir>/src/react/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "functions": 80,
        "branches": 80
      }
    },
    "coverageReporters": [
      "text"
    ],
    "coverageDirectory": "<rootDir>/coverage/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/hooks/pre-commit.sh",
      "commit-msg": "./scripts/hooks/validate-commit-msg.sh ${HUSKY_GIT_PARAMS}"
    }
  }
}
