{
  "name": "linesh-blog",
  "version": "0.0.1",
  "private": true,
  "description": "My blog implemented in different tech stacks.",
  "keywords": [
    "blog",
    "react"
  ],
  "author": "Linesh",
  "license": "MIT",
  "scripts": {
    "lint": "eslint index.js scripts src/react",
    "lint:watch": "esw index.js scripts src/react --watch",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --coverage --verbose",
    "sanity": "npm run lint && npm test",
    "start": "npm run start:server & npm run start:jekyll & wait",
    "start:server": "webpack-dev-server --mode development --hot --open",
    "start:jekyll": "bundle exec jekyll serve --watch --incremental --verbose",
    "debug": "npm run build:release & npm run start:release & wait",
    "build:release": "onchange 'src/react/**/*.js' -e 'dist' -v -i -- npm run build:react",
    "start:release": "http-server dist -c-1 -i",
    "build:react": "webpack --mode production",
    "deploy:react": "./scripts/deploy-react.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.41",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/polyfill": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-beta.41",
    "@babel/preset-react": "^7.0.0-beta.55",
    "babel-core": "^7.0.0-beta.41",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.4",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "eslint-watch": "^3.1.5",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "onchange": "^4.1.0",
    "prettier": "^1.13.5",
    "prop-types": "^15.6.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "redux-actions": "^2.4.0",
    "seamless-immutable": "^7.1.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/react/**/*.test.js"
    ],
    "verbose": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "<rootDir>/src/react/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "functions": 0,
        "branches": 80
      }
    },
    "coverageReporters": [
      "text"
    ],
    "coverageDirectory": "<rootDir>/coverage/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/hooks/pre-commit.sh",
      "commit-msg": "./scripts/hooks/validate-commit-msg.sh ${HUSKY_GIT_PARAMS}"
    }
  }
}
