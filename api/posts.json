---
---
[
  {% for post in site.posts %}
  {
    "id"         : "{{ post.id }}",
    "title"      : "{{ post.title | escape }}",
    "brief"      : "{{ post.brief }}",
    "category"   : "{{ post.categories }}",
    "tags"       : "{{ post.tags | join: ', ' }}",
    "url"        : "{{ post.url }}",
    "path"       : "{{ post.path }}",
    "date"       : "{{ post.date }}",
    "createdDate"  : "{{ post.date | date : '%Y/%m/%d' }}",
    "lastModifiedDate"  : "{{ post.last_modified_at | date : '%Y/%m/%d' }}"
  }
  {% if forloop.last %}{% else %},{% endif %}
  {% endfor %}
]
